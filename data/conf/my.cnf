# Generated by Percona Configuration Wizard (http://tools.percona.com/) version REL5-20120208

[mysql]

# CLIENT #
port                           = 3306
socket                         = /var/run/mysqld/mysqld.sock

[mysqladmin]
socket                         = /var/run/mysqld/mysqld.sock

[mysqldump]
quick
quote-names
max-allowed-packet             = 16M 

[isamchk]
key-buffer                     = 16M

[mysqld]

# GENERAL #
user                           = mysql
default-storage-engine         = InnoDB
socket                         = /var/run/mysqld/mysqld.sock
pid-file                       = /var/run/mysqld/mysqld.pid

# MyISAM #
key-buffer-size                = 32M
myisam-recover                 = FORCE,BACKUP

# SAFETY #
#max-allowed-packet            = 16M
max-allowed-packet             = 48M
max-connect-errors             = 1000000
skip-name-resolve
sql-mode                       = ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_AUTO_VALUE_ON_ZERO,NO_ENGINE_SUBSTITUTION,NO_ZERO_DATE,NO_ZERO_IN_DATE
sysdate-is-now                 = 1
innodb                         = FORCE
innodb-strict-mode             = 1

# DATA STORAGE #
datadir                        = /var/lib/mysql/

# BINARY LOGGING #
# log-bin                      = /var/lib/mysql-binlogs/mysql-bin.log
# binlog-format                = MIXED
# expire-logs-days             = 2
# max-binlog-size              = 1G
# #sync-binlog                 = 1
# sync-binlog                  = 0

# CACHES AND LIMITS #
tmp-table-size                 = 32M
max-heap-table-size            = 32M
query-cache-type               = 0
query-cache-size               = 0
#max-connections               = 500
max-connections                = 1000
thread-cache-size              = 50
open-files-limit               = 65535
table-definition-cache         = 1024
table-open-cache               = 2048

# INNODB #
innodb-flush-method            	= O_DIRECT
innodb-log-files-in-group      	= 2
innodb-log-file-size           	= 512M
innodb-flush-log-at-trx-commit 	= 0

# Temporary for write-heavy
# innodb_support_xa             = 0
innodb_doublewrite             	= 0

innodb-file-per-table          	= 1
innodb-buffer-pool-size        	= 1G

# used for changing log file size
# innodb-fast-shutdown          = 0

# LOGGING #
log-error                      	= /var/log/mysql/mysql-error.log
log-queries-not-using-indexes  	= 0
slow-query-log                 	= 1
slow-query-log-file            	= /var/log/mysql/mysql-slow.log


# STATS
innodb-stats-sample-pages      	= 200
